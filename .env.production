# Cumulus3 Production Configuration
# Zkopíruj tento soubor jako .env a uprav hodnoty

# Síťová konfigurace
SERVER_ADDRESS=0.0.0.0
SERVER_PORT=8800

# Swagger dokumentace (volitelné - pokud není nastaveno, použije se aktuální URL)
# SWAGGER_HOST=cumulus.vase-domena.cz

# Databáze
DB_PATH=/app/data/database/cumulus3.db

# Úložiště
DATA_DIR=/app/data/volumes
DATA_FILE_SIZE=10GB
MAX_UPLOAD_FILE_SIZE=500MB

# Komprese
USE_COMPRESS=Auto
MINIMAL_COMPRESSION=10

# Logování
LOG_LEVEL=INFO              # DEBUG | INFO | WARN | ERROR
LOG_FORMAT=text             # text | json (json pro produkci)
LOG_COLOR=true              # true | false (barevné logy)

# Grafana (volitelné)
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=changeme
